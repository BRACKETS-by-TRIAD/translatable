{
    "name": "brackets/translatable",
    "description": "Make your Eloquent models and other content translated into multiple languages",
    "keywords": [
        "translations",
        "eloquent",
        "language",
        "locale",
        "translate",
        "localization",
        "admin",
        "cms",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Pavol PerdÃ­k",
            "email": "pavol.perdik@brackets.sk",
            "homepage": "https://www.brackets.sk/en",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": "5.5.*|5.6.*|5.7.*",
        "spatie/laravel-translatable": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3|~7.0",
        "orchestra/testbench": "^3.5|~3.6"
    },
    "autoload": {
        "classmap": [],
        "psr-4": {
            "Brackets\\Translatable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brackets\\Translatable\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Brackets\\Translatable\\TranslatableServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
